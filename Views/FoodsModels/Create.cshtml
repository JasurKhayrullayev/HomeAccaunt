@model Home.Models.FoodsModel

@{
    ViewData["Title"] = "Create Food";
}

<h1>Create Food</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="foodName" class="control-label">Food Name</label>
                <input asp-for="foodName" class="form-control" />
                <span asp-validation-for="foodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="foodCategory" class="control-label">Food Category</label>
                <input asp-for="foodCategory" class="form-control" />
                <span asp-validation-for="foodCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="foodprice" class="control-label">Food Price</label>
                <input asp-for="foodprice" class="form-control" />
                <span asp-validation-for="foodprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="foodcomment" class="control-label">Food Comment</label>
                <input asp-for="foodcomment" class="form-control" />
                <span asp-validation-for="foodcomment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fooddate" class="control-label">Food Date</label>
                <input type="date" asp-for="fooddate" class="form-control" />
                <span asp-validation-for="fooddate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
